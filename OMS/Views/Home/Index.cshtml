@model IEnumerable<OMS.Models.Products>
@{
    ViewBag.Title = "Home Page";


    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card card-outline-success">
            <div class="card-header">
                <h2>Medicines|<small>List</small></h2>
            </div>
            <div class="card-block">
                <p>
                    @Html.ActionLink("Create New", "RegisterStaff")
                </p>
                <table class="table table-striped datatable">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                price
                            </th>
                             <td> <th>
                                Finger Print
                            </th></td>
                            <th>
                                medical store
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProducName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MadicalStore.Name)
                                </td>
                                  <td>
                                    <img src="data:image/png;base64,.FingerPrint" height="100" width="100" />
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
@*</div>*@