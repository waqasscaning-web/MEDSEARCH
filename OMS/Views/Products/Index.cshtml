@model IEnumerable<OMS.Models.Products>

@{
    ViewBag.Title = "Home Page";
 Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card card-outline-success">
            <div class="card-header">
                <h2>Products|<small>List</small></h2>
            </div>
            <div class="card-block">
                <p>
                    @Html.ActionLink("Create New", "Create","Products")
                </p>
                <table class="table table-striped datatable">
                    <thead>
                        <tr>
                            <th>
                                Product Name
                            </th>
                            <th>
                                Price

                            </th>
                            <th>
                                Medical store
                            </th>
                            <th>
                                Product weight
                            </th>
                            <th>
                                Picture
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProducName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MadicalStore.StoreName)
                            <td>
                                @Html.DisplayFor(modelItem => item.Productweight)
                            </td>

                            <td>
                                <img src="~/Content/ProductImg/@item.productImage" width="100" height="100" />
                            </td>
                       
 
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |

                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>