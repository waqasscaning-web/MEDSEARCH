@model OMS.ViewModel.EditUserViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_newlayout.cshtml";

}
<link href="~/Content/mycssa.css" rel="stylesheet" />

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
